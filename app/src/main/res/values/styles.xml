<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="WorthItTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowNoTitle">true</item>


    </style>

    <style name="WorthIt" parent="Theme.AppCompat.Light" >
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorText</item>
        <item name="android:navigationBarColor">@color/colorText</item>
        <item name="android:statusBarColor">@color/colorText</item>
        <item name="windowActionBar">true</item>
        <item name="toolbarStyle">@style/WorthItActionBar</item>
    </style>

    <style name="primaryButton">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">23dp</item>
    </style>

    <style name="secondaryButton">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">23dp</item>
    </style>

    <!-- Primeira Barra-->
    <style name="WorthItActionBar" parent="@android:style/Widget.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
