<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.product.ProductFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/product_name"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:src="@drawable/asus" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/product_margin"
            android:layout_marginRight="@dimen/product_margin"
            android:background="@drawable/shadow_container_list"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/category_price"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/product_price_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginLeft="@dimen/product_margin"
            android:layout_marginRight="@dimen/product_margin"
            android:background="@drawable/shadow_container_list"
            android:text="@string/product_price"/>

        <ListView

            android:layout_marginTop="10dp"
            android:id="@+id/list_category_product"
            android:layout_marginLeft="@dimen/product_margin"
            android:layout_marginRight="@dimen/product_margin"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbarSize="3dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:scrollingCache="true"
            android:smoothScrollbar="true">

        </ListView>

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:elevation="6dp"
        android:layout_marginBottom="180dp"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:backgroundTint="@color/fab_heart_color"
        android:id="@+id/like_button"
        android:visibility="invisible"
        android:src="@drawable/ic_favorite_white_24dp"></android.support.design.widget.FloatingActionButton>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:elevation="6dp"
        android:visibility="invisible"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/add_review"
        android:src="@drawable/ic_add_white_24dp">

    </android.support.design.widget.FloatingActionButton>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:elevation="6dp"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/more_button"
        android:src="@drawable/ic_more_horiz_black_24dp"
        >

    </android.support.design.widget.FloatingActionButton>

</android.support.design.widget.CoordinatorLayout>