<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.account.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shadow_container">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_container">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/user_icon"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:text="Marianne"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="35dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:text="maarip4"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"></TextView>


        </LinearLayout>

        <ListView
            android:id="@+id/listUserOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        </ListView>

    </LinearLayout>

</FrameLayout>